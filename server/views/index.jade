extends layout

block content
	h1= title
	p Welcome to #{title}
	div.table-responsive
		table.table.table-striped
			thead
				tr
					th
					th Name
					th Brand
					th Best Before
					th Category
					th Code
			tbody
				each item, i in items
					tr
						td
							button(type="button", aria-label="Delete").btn.btn-default
								span.glyphicon.glyphicon-remove(aria-hidden="true")
						td= item.name
						td= item.brand
						td= item.bestBefore
						td= item.category
						td= item.code

